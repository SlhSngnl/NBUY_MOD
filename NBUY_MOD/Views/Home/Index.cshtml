@model HomeIndexViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<div class="row">
    @foreach (var item in Model.Categories)
    {
        <div class="col">
            @item.CategoryName
        </div>
    }
</div>
<hr />
<div class="row">
    @foreach (var item in Model.News)
    {
        <div class="col-3">
            <div class="card" style="width: 18rem;">
                <img src="https://via.placeholder.com/290x190" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.NewsTitle</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.NewsSubTitle</h6>
                    <p class="card-text">@item.NewsDescription</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
    }
</div>
    

</body>
</html>
